{
  "author": "Craig Walker",
  "dependencies": {
    "typonomy": "^0.13.0"
  },
  "description": "A very lightweight XML construction library.",
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.1.0",
    "@tsconfig/node-lts": "^20.1.3",
    "@tsconfig/recommended": "^1.0.6",
    "@types/node": "^20.13.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@xmldom/xmldom": "^0.8.10",
    "esbuild": "^0.21.4",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^4.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "exports": {
    ".": {
      "default": "./dist/esm/index.js",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "keywords": [
    "xml"
  ],
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "name": "lite-xml",
  "scripts": {
    "build": "node esbuild.mjs",
    "check": "tsc --noEmit && tsc --noEmit -p test/tsconfig.json",
    "docs": "typedoc && rm docs/README.md",
    "lint": "eslint src/**/*.ts test/**/*.test.ts",
    "lint:fix": "eslint --fix src/**/*.ts test/**/*.test.ts",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate": "pnpm run check && pnpm run lint && pnpm run test"
  },
  "type": "module",
  "types": "dist/esm/index.d.ts",
  "version": "1.4.2-dev.0"
}
